.main
  .main__header
    .left__box
      .left__box__current-box
        group-name
      .left__box__member-list
        Member:
        .left__box__member-list__member
          username
    .edit-btn
      Edit
  .message
    .message__box
      .message__box__title
        .talker
          username
        .date
          wrighting_date
      .message__box__text
        text
  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input__image' do
          = icon('fa', 'image', class: 'icon')
          = f.file_field :image, class: 'form-imagefile'
      = f.submit 'Send', class: 'send-box'

