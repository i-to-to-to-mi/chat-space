.side
  .side_header
    .header-box
      %h3.header-box__user-name
        = current_user.name
      %ul.header-box__box-icon
        %li.header-box__box-icon__newgroup
          = link_to new_group_path do
            = fa_icon 'edit', class: 'icon'
        %li.header-box__box-icon__fix
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .side_groups
    - current_user.groups.each do |group| #current_userの入っているgroupsテーブルに入っているという意味
      .group
        = link_to group_messages_path(group) do        
          .group__name
            = group.name
          .group__message            
            = group.show_last_message
